<Window x:Class="파파야연대기.View.NoticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:파파야연대기.View"
        mc:Ignorable="d"
        FontFamily="/Resources/Fonts/#MiraeroNormal"
        Title="NoticeWindow" Height="400" Width="600" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" Background="Transparent">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/YesNoWindowImages/YesNoWindowBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock x:Name="NoticeTextBlock"
                   FontSize="25"
                   Margin="144,89,130,222"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Width="326" Height="89" TextWrapping="Wrap"/>

        <Button x:Name="CloseButton"
                Margin="247,178,0,122"
                Background="Transparent"
                BorderBrush="Transparent"
                FontSize="30"
                Click="CloseButton_Click" Style="{StaticResource CloseButton}" Width="118"/>
    </Grid>
</Window>
