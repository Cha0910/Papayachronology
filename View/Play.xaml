                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter TargetName="buttonImage" Property="Source" Value="/Resources/PlayImages/mouseOverBackButton.jpg"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Canvas>
                <!--#endregion-->
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <ScrollViewer Margin="40,65,40,40" x:Name="EventTextBlockScroll" PreviewMouseDown="EventTextBlockScroll_PreviewMouseDown">
                    <StackPanel>
                        <TextBlock x:Name="EventTextBlock" Style="{StaticResource EventTextBlock}"/>

                        <TextBlock x:Name="TempTextBlock" Style="{StaticResource EventTextBlock}"/>

                        <TextBlock x:Name="ColorTextBlock" Style="{StaticResource EventTextBlock}"/>
                    </StackPanel>
                </ScrollViewer>

                <!--#region SelectButtons...-->
                <StackPanel Grid.Row="1" x:Name="ButtonsPanel">
                    <Button x:Name="selectButton1"
                            Click="selectButton1_Click"                            
                            Style="{StaticResource SelectButtons}">
                        <StackPanel Orientation="Horizontal" Height="30">
                            <Label x:Name="selectButton1Content" Style="{StaticResource SelectButtonLabel}"
                                   Content="{Binding gameText.SelectButton1Text}"/>

                            <Label x:Name="selectButton1StatImage">
                                <Image Source="{Binding gameText.SelectButton1Image}" Stretch="Fill"/>
                            </Label>

                            <Label x:Name="selectButton1Probability"
                                   Content="{Binding gameText.SelectButton1Probability}"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="selectButton2"
                            Click="selectButton2_Click"
                            Style="{StaticResource SelectButtons}">
                        <StackPanel Orientation="Horizontal" Height="30">
                            <Label Style="{StaticResource SelectButtonLabel}"
                                   Content="{Binding gameText.SelectButton2Text}"/>

                            <Label>
                                <Image Source="{Binding gameText.SelectButton2Image}"/>
                            </Label>

                            <Label Content="{Binding gameText.SelectButton2Probability}"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="selectButton3"
                            Click="selectButton3_Click"
                            Style="{StaticResource SelectButtons}">
                        <StackPanel Orientation="Horizontal" Height="30">
                            <Label Style="{StaticResource SelectButtonLabel}"
                                   Content="{Binding gameText.SelectButton3Text}"/>

                            <Label>
                                <Image Source="{Binding gameText.SelectButton3Image}"/>
                            </Label>

                            <Label Content="{Binding gameText.SelectButton3Probability}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <!--#endregion-->
            </Grid>
        </Grid>
    </Grid>
</UserControl>
